<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_ingredients"
        android:layout_width="57dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/success" />

    <TextView
        android:id="@+id/text_ingredients_menuname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="20dp"
        android:text="Burger XL"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/text_price_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="8dp"

        android:text="+0,00â‚¬"
        android:textColor="@color/colorBlack" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/text_ingredients_menuname"
        android:text="-" />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="55dp"
        android:layout_toStartOf="@+id/text_price_ingredients"
        android:text="+" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="21dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="29dp"
        android:layout_toStartOf="@+id/button_plus"
        android:layout_toEndOf="@+id/button_minus"
        android:text="1"
        android:textColor="@color/colorBlack"
        android:textSize="19sp"
        android:textStyle="bold" />

</RelativeLayout>
