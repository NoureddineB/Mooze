<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.SizeFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <ImageView
           android:id="@+id/menu_XL"
           android:layout_width="175dp"
           android:layout_height="167dp"
           android:layout_marginTop="48dp"
           android:clickable="true"
           android:focusable="true"
           android:src="@drawable/menu2"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.248"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <ImageView
           android:id="@+id/menu_big"
           android:layout_width="133dp"
           android:layout_height="136dp"
           android:layout_marginTop="72dp"
           android:src="@drawable/menu2"
           android:clickable="true"
           android:focusable="true"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.244"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/menu_XL" />

       <ImageView
           android:id="@+id/menu_normal"
           android:layout_width="112dp"
           android:layout_height="136dp"
           android:layout_marginTop="68dp"
           android:src="@drawable/menu2"
           android:clickable="true"
           android:focusable="true"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.227"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/menu_big" />

       <TextView
           android:id="@+id/textView8"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="8dp"
           android:layout_marginTop="36dp"
           android:text="Menu XL"
           app:layout_constraintStart_toEndOf="@+id/menu_XL"
           app:layout_constraintTop_toTopOf="@+id/menu_XL" />

       <TextView
           android:id="@+id/textView12"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="12dp"
           android:layout_marginTop="16dp"
           android:text="Menu Medium"
           app:layout_constraintStart_toEndOf="@+id/menu_big"
           app:layout_constraintTop_toTopOf="@+id/menu_big" />

       <TextView
           android:id="@+id/textView14"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           android:text="Menu Small"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.053"
           app:layout_constraintStart_toEndOf="@+id/menu_normal"
           app:layout_constraintTop_toTopOf="@+id/menu_normal" />

       <TextView
           android:id="@+id/textView15"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="12dp"
           android:text="(6.90€)"
           android:visibility="invisible"
           app:layout_constraintEnd_toEndOf="@+id/textView14"
           app:layout_constraintHorizontal_bias="0.23"
           app:layout_constraintStart_toEndOf="@+id/menu_normal"
           app:layout_constraintTop_toBottomOf="@+id/textView14" />

       <TextView
           android:id="@+id/textView16"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="12dp"
           android:layout_marginTop="12dp"
           android:text="(7.20 €)"
           android:visibility="invisible"
           app:layout_constraintStart_toEndOf="@+id/menu_big"
           app:layout_constraintTop_toBottomOf="@+id/textView12" />

       <TextView
           android:id="@+id/textView17"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="8dp"
           android:layout_marginBottom="24dp"
           android:text="(8.40€)"
           android:visibility="invisible"
           app:layout_constraintBottom_toBottomOf="@+id/menu_XL"
           app:layout_constraintStart_toEndOf="@+id/menu_XL"
           app:layout_constraintTop_toBottomOf="@+id/textView8"
           app:layout_constraintVertical_bias="0.153" />


       <ImageView
           android:id="@+id/image_check1"
           android:layout_width="49dp"
           android:layout_height="41dp"
           android:layout_marginTop="8dp"
           android:src="@drawable/icon_checked"
           android:visibility="invisible"
           app:layout_constraintBottom_toBottomOf="@+id/menu_normal"
           app:layout_constraintEnd_toEndOf="@+id/menu_normal"
           app:layout_constraintHorizontal_bias="0.888"
           app:layout_constraintStart_toStartOf="@+id/menu_normal"
           app:layout_constraintTop_toTopOf="@+id/menu_normal"
           app:layout_constraintVertical_bias="0.103" />

       <ImageView
           android:id="@+id/image_check2"
           android:layout_width="49dp"
           android:layout_height="41dp"
           android:layout_marginTop="8dp"
           android:src="@drawable/icon_checked"
           android:visibility="invisible"
           app:layout_constraintBottom_toBottomOf="@+id/menu_big"
           app:layout_constraintEnd_toEndOf="@+id/menu_big"
           app:layout_constraintHorizontal_bias="0.94"
           app:layout_constraintStart_toStartOf="@+id/menu_big"
           app:layout_constraintTop_toTopOf="@+id/menu_big"
           app:layout_constraintVertical_bias="0.195" />

       <ImageView
           android:id="@+id/image_check3"
           android:layout_width="49dp"
           android:layout_height="41dp"
           android:src="@drawable/icon_checked"
           android:visibility="invisible"
           app:layout_constraintBottom_toBottomOf="@+id/menu_XL"
           app:layout_constraintEnd_toEndOf="@+id/menu_XL"
           app:layout_constraintHorizontal_bias="0.904"
           app:layout_constraintStart_toStartOf="@+id/menu_XL"
           app:layout_constraintTop_toTopOf="@+id/menu_XL"
           app:layout_constraintVertical_bias="0.19" />

   </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>